<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_login"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fundo_pe"
    android:gravity="center_vertical|center_horizontal"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.parse.starter.activity.LoginActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/editLoginUsuarioId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/LogoId"
            android:layout_marginTop="60dp"
            android:background="@drawable/fundo_caixa_texto"
            android:ems="10"
            android:hint="@string/nomeUsuario"
            android:inputType="textPersonName"
            android:padding="16dp"
            android:text=""
            android:textColor="@android:color/white"
            android:textColorHint="@android:color/white" />

        <Button
            android:id="@+id/botaoLogarId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/editLoginSenhaId"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="29dp"
            android:background="@drawable/fundo_botao"
            android:text="Logar"
            android:textColor="@android:color/white" />

        <TextView
            android:id="@+id/semContaId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/botaoLogarId"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="3dp"
            android:onClick="abrirCadastroUsuario"
            android:text="@string/semContaLogin"
            android:textColor="@color/background_material_light" />

        <TextView
            android:id="@+id/LogoId"
            style="@style/AlertDialog.AppCompat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="91dp"
            android:text="MÃºsica PE"
            android:textColor="@color/background_floating_material_light"
            android:textSize="@dimen/tamanho_titulo"
            tools:textStyle="bold" />

        <EditText
            android:id="@+id/editLoginSenhaId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/editLoginUsuarioId"
            android:layout_marginTop="10dp"
            android:background="@drawable/fundo_caixa_texto"
            android:ems="10"
            android:hint="@string/senha"
            android:inputType="textPassword"
            android:padding="16dp"
            android:text=""
            android:textColor="@android:color/white"
            android:textColorHint="@android:color/white" />
    </RelativeLayout>
</RelativeLayout>
